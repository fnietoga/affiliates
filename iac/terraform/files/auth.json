{
  "routes": [
    {
      "path_prefix": "/",
      "policies": {
        "signedIn": { 
          "требование": {
            "claim": "groups",
            "operator": "contains",
            "value": "AFFILIATES_USERS"
          }
        }
      }
    }
  ],
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/${tenant_id}/v2.0",
          "clientId": "${client_id}",
          "clientSecretSettingName": "MICROSOFT_PROVIDER_AUTHENTICATION_SECRET"
        },
        "validation": {
          "allowedAudiences": [
            "api://${client_id}"
          ]
        }
      }
    }
  }
}
